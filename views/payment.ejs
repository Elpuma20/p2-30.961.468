<head>
    <body>
        <header>
            <nav class="navbar">
                
                <input type="checkbox" id="menu-toggle">
                <label for="menu-toggle" class="menu-icon">
                    <div class="line"></div>
                    <div class="line"></div>
                    <div class="line"></div>
                </label>
                <ul class="nav-links">
                    <li><a href="/inicio">Inicio</a></li>
                    <li><a href="/servicio">Nuestro Servicio</a></li>
                    <li><a href="/beneficios">Beneficios</a></li>
                    <li><a href="/contacto">Contacto</a></li>
                    <li><a href="/payment">Pagar servicios</a></li>
                </ul>
                <div class="social-links">
                        <a href=""><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/ca/LinkedIn_logo_initials.png/960px-LinkedIn_logo_initials.png" alt="LinkedIn"></a>
                    <a href=""><img src="https://png.pngtree.com/png-vector/20221018/ourmid/pngtree-facebook-social-media-icon-png-image_6315968.png" alt="Facebook"></a>
                    <a href=""><img src="https://cdn.pixabay.com/photo/2015/03/10/17/30/twitter-667462_640.png" alt="Twitter"></a>
                    <a href=""><img src="data:image/jpeg;base64," alt="instagran"></a>
                </div>
            </nav>
        </header>
  <main>
    <section id="payment" class="payment">
    <div class="payment-container">

        <h2>Realiza tu Pago</h2>

        <% if (success) { %>
            <div class="success-popup">
                <p>🎉 Pago realizado correctamente.</p>
            </div>
        <% } %>
          <% if (errors && errors.length) { %>
        <ul class="errors">
          <% errors.forEach(e => { %>
            <li><%= e %></li>
          <% }) %>
        </ul>
      <% } %>


        <!-- Mensaje de tarjeta expirada -->
        <div id="errorTarjeta" style="color: red; display: none;">
            ❌ Tarjeta expirada
        </div>

        <form action="/payment/add" method="POST" class="payment-form" onsubmit="return validarTarjeta()">

            <div class="form-group">
                <label for="service">Servicio:</label>
                <select id="service" name="service" required>
                    <option value="">-- Selecciona un servicio --</option>
                    <option value="consultoria"
                        <%= (typeof data !== 'undefined' && data.service === 'consultoria') ? 'selected' : '' %>>
                        Consultoría Financiera
                    </option>
                    <option value="planificacion"
                        <%= (typeof data !== 'undefined' && data.service === 'planificacion') ? 'selected' : '' %>>
                        Planificación Tributaria
                    </option>
                    <option value="auditoria"
                        <%= (typeof data !== 'undefined' && data.service === 'auditoria') ? 'selected' : '' %>>
                        Auditoría Contable
                    </option>
                </select>
            </div>

            <div class="form-group">
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" name="email" required value="<%= (typeof data !== 'undefined' && data.email) ? data.email : '' %>" />
            </div>

            <div class="form-group">
                <label for="cardName">Nombre en la Tarjeta:</label>
                <input type="text" id="cardName" name="cardName" required value="<%= (typeof data !== 'undefined' && data.cardName) ? data.cardName : '' %>" />
            </div>

            <div class="form-group">
                <label for="cardNumber">Número de Tarjeta:</label>
                <input type="text" id="cardNumber" name="cardNumber" maxlength="19"
                    placeholder="XXXX XXXX XXXX XXXX" required value="<%= (typeof data !== 'undefined' && data.cardNumber) ? data.cardNumber : '' %>" />
            </div>

            <div class="form-row">
                <div class="form-group small">
                    <label for="expMonth">Mes Expiración:</label>
                    <input type="text" id="expMonth" name="expMonth" maxlength="2" placeholder="MM" required value="<%= (typeof data !== 'undefined' && data.expMonth) ? data.expMonth : '' %>" />
                </div>
                <div class="form-group small">
                    <label for="expYear">Año Expiración:</label>
                    <input type="text" id="expYear" name="expYear" maxlength="4" placeholder="YYYY" required value="<%= (typeof data !== 'undefined' && data.expYear) ? data.expYear : '' %>" />
                </div>
                <div class="form-group small">
                    <label for="cvv">CVV:</label>
                    <input type="text" id="cvv" name="cvv" maxlength="4" placeholder="123" required value="<%= (typeof data !== 'undefined' && data.cvv) ? data.cvv : '' %>" />
                </div>
            </div>

            <div class="form-group">
                <label for="amount">Monto a Pagar:</label>
                <input type="number" id="amount" name="amount" step="0.01" required value="<%= (typeof data !== 'undefined' && data.amount) ? data.amount : '' %>" />
            </div>

            <div class="form-group">
                <label for="currency">Moneda:</label>
                <select id="currency" name="currency" required>
                    <option value="USD" <%= (typeof data !== 'undefined' && data.currency === 'USD') ? 'selected' : '' %>>USD</option>
                    <option value="EUR" <%= (typeof data !== 'undefined' && data.currency === 'EUR') ? 'selected' : '' %>>EUR</option>
                    <option value="MXN" <%= (typeof data !== 'undefined' && data.currency === 'MXN') ? 'selected' : '' %>>MXN</option>
                </select>
            </div>

            <button type="submit" class="button">Pagar Ahora</button>
        </form>
    </div>
</section>

<script>
    function validarTarjeta() {
        const expMonth = parseInt(document.getElementById("expMonth").value, 10);
        const expYear = parseInt(document.getElementById("expYear").value, 10);
        const errorTarjeta = document.getElementById("errorTarjeta");

        const now = new Date();
        const mesActual = now.getMonth() + 1;
        const añoActual = now.getFullYear();

        if (expYear < añoActual || (expYear === añoActual && expMonth < mesActual)) {
            errorTarjeta.style.display = "block";
            return false; // Previene el envío del formulario
        } else {
            errorTarjeta.style.display = "none";
            return true; // Permite el envío del formulario
        }
    }
</script>

  </main>
