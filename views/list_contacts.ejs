<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Contactos Recibidos</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    #search { padding: 8px; width: 300px; margin-bottom: 10px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { border: 1px solid #ccc; padding: 10px; text-align: left; }
    th { background-color: #f8f8f8; }
    tr:hover { background-color: #f1f1f1; }
  </style>
  <script>
    function searchContacts() {
      const input = document.getElementById('search').value.toLowerCase();
      document.querySelectorAll('#contactsBody tr').forEach(row => {
        const name = row.children[0].textContent.toLowerCase();
        const email = row.children[1].textContent.toLowerCase();
        row.style.display = name.includes(input) || email.includes(input) ? '' : 'none';
      });
    }
  </script>
</head>
<body>

  <h2>Contactos Recibidos</h2>
  <input type="text" id="search" onkeyup="searchContacts()" placeholder="Buscar por nombre o email" />

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Comentario</th>
        <th>IP</th>
        <th>Pa√≠s</th>
        <th>Fecha</th>
      </tr>
    </thead>
    <tbody id="contactsBody">
      <% contactos.forEach(c => { %>
        <tr>
          <td><%= c.nombre %></td>
          <td><%= c.email %></td>
          <td><%= c.mensaje %></td>
          <td><%= c.ip %></td>
          <td><%= c.pais %></td>
          <td><%= c.created_at.toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>