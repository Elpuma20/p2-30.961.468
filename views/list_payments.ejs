<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Pagos Recibidos</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 10px; border: 1px solid #ccc; }
    th { background-color: #f8f8f8; }
    tr:hover { background-color: #f1f1f1; }
  </style>
</head>
<body>
  <h2>Pagos Recibidos</h2>
  <div>
    <input id="nameFilter" placeholder="Filtrar por nombre">
    <input id="emailFilter" placeholder="Filtrar por email">
    <input id="amountFilter" placeholder="Filtrar por monto">
    <input id="dateFilter" placeholder="Filtrar por fecha">
    <input id="countryFilter" placeholder="Filtrar por servicio">
  </div>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Monto</th>
        <th>Fecha</th>
        <th>Servicio</th>
      </tr>
    </thead>
    <tbody id="paymentsBody">
      <% pagos.forEach(p => { %>
        <tr>
          <td><%= p.cardName %></td>
          <td><%= p.email %></td>
          <td><%= p.amount %></td>
          <td><%= p.created_at %></td>
          <td><%= p.service %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <script src="/js/filterPayments.js"></script>
</body>
</html>